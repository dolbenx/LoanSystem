 <script>
    $('#com_id').on('click', function (event){
        var modal= $("#add-client");
        var acc= ""
        $.ajax({
            url: '/Generate/Company/ID',
            type: 'POST',
            data: {_csrf_token: $('#csrf').val()},
            success: function(result) {
                if (result.account){
                    acc = result.account
                    modal.find('#companies_id').val(acc);
                    modal.modal("show")
                } else {
                    modal.find('#companies_id').val("error");
                    modal.modal("show")
                }
            },
            error: function(request, msg, error) {
                modal.find('#companies_id').val("error 2");
                modal.modal("show")
            }
        })

    });
</script>

