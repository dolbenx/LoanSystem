  </li>

  <li>
    <strong>Start date:</strong>
    <%= @loan_product.start_date %>
  </li>

  <li>
    <strong>Close date:</strong>
    <%= @loan_product.close_date %>
  </li>

  <li>
    <strong>Days in month:</strong>
    <%= @loan_product.days_in_month %>
  </li>

  <li>
    <strong>Days in year:</strong>
    <%= @loan_product.days_in_year %>
  </li>

  <li>
    <strong>External:</strong>
    <%= @loan_product.external_id %>
  </li>

  <li>
    <strong>Overdue days for npa:</strong>
    <%= @loan_product.overdue_days_for_npa %>
  </li>

  <li>
    <strong>Max outstanding loan balance:</strong>
    <%= @loan_product.max_outstanding_loan_balance %>
  </li>

  <li>
    <strong>Require collateral:</strong>
    <%= @loan_product.require_collateral %>
  </li>

</ul>

<span><%= link "Edit", to: Routes.loan_product_path(@conn, :edit, @loan_product) %></span>
<span><%= link "Back", to: Routes.loan_product_path(@conn, :index) %></span>
