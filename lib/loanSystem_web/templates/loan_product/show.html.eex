<h1>Show Loan product</h1>

<ul>

  <li>
    <strong>Short code:</strong>
    <%= @loan_product.short_code %>
  </li>

  <li>
    <strong>Name:</strong>
    <%= @loan_product.name %>
  </li>

  <li>
    <strong>Currency code:</strong>
    <%= @loan_product.currency_code %>
  </li>

  <li>
    <strong>Min principal amount:</strong>
    <%= @loan_product.min_principal_amount %>
  </li>

  <li>
    <strong>Max principal amount:</strong>
    <%= @loan_product.max_principal_amount %>
  </li>

  <li>
    <strong>Arrearstolerance amount:</strong>
    <%= @loan_product.arrearstolerance_amount %>
  </li>

  <li>
    <strong>Description:</strong>
    <%= @loan_product.description %>
  </li>

  <li>
    <strong>Min nominal interest rate per period:</strong>
    <%= @loan_product.min_nominal_interest_rate_per_period %>
  </li>

  <li>
    <strong>Max nominal interest rate per period:</strong>
    <%= @loan_product.max_nominal_interest_rate_per_period %>
  </li>

  <li>
    <strong>Min loan period:</strong>
    <%= @loan_product.min_loan_period %>
  </li>

  <li>
    <strong>Max loan period:</strong>
    <%= @loan_product.max_loan_period %>
  </li>

  <li>
    <strong>Interest method type:</strong>
    <%= @loan_product.interest_method_type %>
  </li>

  <li>
    <strong>Min number of repayments:</strong>
    <%= @loan_product.min_number_of_repayments %>
  </li>

  <li>
    <strong>Max number of repayments:</strong>
